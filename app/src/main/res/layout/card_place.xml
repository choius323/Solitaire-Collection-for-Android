<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_place_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="3dp"
        app:srcCompat="@drawable/card_place_shape" />

    <TextView
        android:id="@+id/card_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/card_place_iv"
        android:layout_alignTop="@id/card_place_iv"
        android:layout_alignEnd="@id/card_place_iv"
        android:layout_alignBottom="@id/card_place_iv"
        android:gravity="center"
        android:text="A"
        android:textColor="#453A3636"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>